{
    "id": "webhook-server",
    "name": "Webhook Server",
    "version": "1.0.1",
    "description": "Exposes a webhook HTTP server for receiving external messages and triggering agent tasks",
    "author": "",
    "license": "MIT",
    "main": "dist/index.js",
    "configSchema": {
        "type": "object",
        "properties": {
            "port": {
                "type": "number",
                "default": 8765,
                "description": "Port number for the webhook server"
            },
            "host": {
                "type": "string",
                "default": "0.0.0.0",
                "description": "Host address to bind to"
            },
            "authToken": {
                "type": "string",
                "description": "Authentication token for incoming requests (Bearer token). Auto-generated if not provided."
            },
            "timeout": {
                "type": "number",
                "default": 300000,
                "description": "Maximum time (ms) to wait for agent task completion"
            },
            "agentId": {
                "type": "string",
                "default": "default",
                "description": "Agent ID to use for processing messages (e.g., 'default', 'main')"
            },
            "useNgrok": {
                "type": "boolean",
                "default": false,
                "description": "Enable ngrok tunnel on startup"
            },
            "ngrokAuthToken": {
                "type": "string",
                "description": "Ngrok authtoken"
            },
            "ngrokPort": {
                "type": "number",
                "default": 8765,
                "description": "Port to tunnel (default: 8765)"
            },
            "ngrokRegion": {
                "type": "string",
                "description": "Ngrok region (us, eu, au, ap, sa, jp, in)"
            }
        },
        "required": []
    },
    "configDefaults": {
        "port": 8765,
        "host": "0.0.0.0",
        "authToken": "$auto:uuid",
        "timeout": 300000,
        "agentId": "default",
        "useNgrok": false,
        "ngrokPort": 8765
    },
    "uiHints": {
        "authToken": {
            "label": "Auth Token",
            "sensitive": true,
            "placeholder": "Auto-generated secure token"
        },
        "port": {
            "label": "Server Port",
            "placeholder": "8765"
        },
        "host": {
            "label": "Bind Host",
            "placeholder": "0.0.0.0"
        },
        "timeout": {
            "label": "Task Timeout (ms)",
            "placeholder": "300000"
        },
        "useNgrok": {
            "label": "Enable Ngrok"
        },
        "ngrokAuthToken": {
            "label": "Ngrok AuthToken",
            "sensitive": true,
            "placeholder": "Your ngrok authtoken"
        },
        "ngrokPort": {
            "label": "Ngrok Tunnel Port",
            "placeholder": "8765"
        }
    }
}